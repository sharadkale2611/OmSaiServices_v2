@{
    Layout = "_LayoutWorker";
    ViewData["Title"] = "Worker Log in";
}

@if (ViewBag.Message != null)
{
    <p class="text-danger text-center">@ViewBag.Message</p>
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post" asp-area="Worker" asp-controller="WorkerAuthentication" asp-action="Login">
            <hr />
            @* <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div> *@
                <div class="form-floating mb-3">
                    <label for="WorkmanId" class="form-label">Workman ID:</label>
                    <input name="WorkmanId" id="WorkmanId" class="form-control" autocomplete="username" aria-required="true" placeholder="WorkmanId" />
                </div>
                <div class="form-floating mb-3">
                    <label for="Password" class="form-label">Password:</label>
                    <input type="password" name="Password" id="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary ">Log in</button>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-8 col-md-offset-2 col-sm-12 mx-auto d-flex justify-content-center ml-5">
        <img src="~/demo/LoginImg/Admin.png" style="height:400px;width: 350px; " />
    </div>

</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}


